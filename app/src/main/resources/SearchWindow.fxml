<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SearchViewController">
    <content>
        <AnchorPane fx:id="searchWindow" stylesheets="@HomeWindow.css">
            <children>
                <TextField fx:id="search" layoutX="332.0" layoutY="116.0" onKeyPressed="#searchEnter" prefHeight="55.0" prefWidth="591.0" promptText="Search here..." />
                <Button fx:id="searchBtn" layoutX="843.0" layoutY="122.0" mnemonicParsing="false" onAction="#searchBtnClicked" prefHeight="41.0" prefWidth="73.0" text="Search" textFill="#171717">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <GridPane fx:id="searchGrid" hgap="80.0" layoutX="86.0" layoutY="287.0" minHeight="50" vgap="80.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="300.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="400.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="400.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="400.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                </GridPane>
                <Label alignment="CENTER" contentDisplay="TOP" layoutY="233.0" prefHeight="39.0" prefWidth="1200.0" text="Search Results" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox layoutX="109.0" layoutY="732.0" prefHeight="251.0" prefWidth="1038.0" />
                <HBox layoutX="109.0" layoutY="280.0" prefHeight="362.0" prefWidth="1038.0">
                </HBox>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
