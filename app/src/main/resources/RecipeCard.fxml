         <font>
            <Font size="9.0" />
         </font>
         <graphic>
            <ImageView fx:id="plane" fitHeight="30.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@plane.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <ImageView fx:id="favBtn" fitHeight="39.0" fitWidth="41.0" layoutX="14.0" layoutY="326.0" onMouseClicked="#toggleFavorite" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Heart.png" />
