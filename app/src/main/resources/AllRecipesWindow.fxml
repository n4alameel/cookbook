<ScrollPane fitToWidth="true" prefHeight="800.0" prefWidth="1230.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AllRecipeWindowController">
    <content>
        <AnchorPane fx:id="homePane" stylesheets="@HomeWindow.css">
            <children>
                <TextField fx:id="search" layoutX="332.0" layoutY="116.0" prefHeight="55.0" prefWidth="591.0" promptText="Search here..." onKeyPressed="#openSearchPage" />
                <Button fx:id="searchBtn" layoutX="843.0" layoutY="122.0" mnemonicParsing="false" prefHeight="41.0" prefWidth="73.0" text="Search" textFill="#171717" onAction="#openSearchPage">
                <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <Label alignment="CENTER" contentDisplay="TOP" layoutX="12.0" layoutY="203.0" prefHeight="39.0" prefWidth="1200.0" stylesheets="@HomeWindow.css" text="All Recipes" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Pagination fx:id="recipePages" layoutX="64.0" layoutY="270.0" maxPageIndicatorCount="5" pageCount="10" prefHeight="1461.0" prefWidth="1095.0" />
                <GridPane fx:id="recipeGrid" hgap="80.0" layoutX="86.0" layoutY="287.0" vgap="80.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="300.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="400.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="400.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="400.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                </GridPane>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
