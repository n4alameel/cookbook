<ScrollPane fitToWidth="true" prefHeight="941.0" prefWidth="1230.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HomeViewController">
    <content>
        <AnchorPane fx:id="homePane" prefHeight="1568.0" prefWidth="1220.0" stylesheets="@HomeWindow.css">
            <children>
                <Pane fx:id="footerPane" layoutX="1.0" layoutY="1343.0" prefHeight="225.0" prefWidth="1219.0">
                    <children>
                        <ImageView fitHeight="72.0" fitWidth="252.0" layoutX="66.0" layoutY="6.0" onMouseClicked="#goToHomePage" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/logo.png" />
                            </image>
                        </ImageView>
                        <Label layoutX="74.0" layoutY="94.0" prefHeight="73.0" prefWidth="208.0" text="This Cookbook is made by&#10;the students of the Project Course in Computer  Science, &#10;Cobol group" wrapText="true" />
                        <Pane fx:id="copyright" layoutX="-1.0" layoutY="192.0" prefHeight="39.0" prefWidth="1220.0">
                            <children>
                                <Label layoutX="582.0" layoutY="5.0" prefHeight="23.0" prefWidth="110.0" text="Group Cobol, 2023" textFill="WHITE" />
                            </children>
                        </Pane>
                        <Label layoutX="555.0" layoutY="29.0" text="Quick Access">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <Label layoutX="957.0" layoutY="29.0" text="Need help?">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <Button fx:id="help" layoutX="903.0" layoutY="73.0" mnemonicParsing="false" onAction="#openHelpPage" prefHeight="40.0" prefWidth="193.0" text="Go to our help page" />
                    </children>
                </Pane>
                <Pane fx:id="menuBar" layoutX="1.0" layoutY="-1.0" prefHeight="40.0" prefWidth="1218.0" stylesheets="@HomeWindow.css">
                    <children>
                        <Hyperlink accessibleRole="BUTTON" layoutX="871.0" layoutY="8.0" onAction="#goToMealPlansView" style="-fx-text-fill: white;" styleClass="links" text="Meal Plans" />
                        <Hyperlink layoutX="1121.0" layoutY="8.0" style="-fx-text-fill: white;" styleClass="links" text="Chatroom" onAction="#openMessage"/>
                        <Hyperlink layoutX="991.0" layoutY="8.0" style="-fx-text-fill: white;" styleClass="links" stylesheets="@HomeWindow.css" text="Shopping List" />
                    </children>
                </Pane>
                <HBox layoutX="332.0" layoutY="116.0" prefHeight="55.0" prefWidth="591.0" spacing="5.0">
                    <TextField fx:id="searchField" promptText="Search for recipes, tags or ingredients"
                               HBox.hgrow="ALWAYS" onKeyPressed="#onSearchEnter"/>
                    <ComboBox fx:id="categoryComboBox" promptText="Select category">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Recipe"/>
                                <String fx:value="Tags"/>
                                <String fx:value="Ingredients"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Button fx:id="searchButton" text="Search" onAction="#openSearchPage"/>
                </HBox>
                <ImageView fitHeight="72.0" fitWidth="128.0" layoutX="1.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true" />
                <ImageView fx:id="recipe_image" fitHeight="37.0" fitWidth="34.0" layoutX="880.0" layoutY="51.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/whisk.png" />
                    </image>
                </ImageView>
                <ImageView fitHeight="39.0" fitWidth="41.0" layoutX="995.0" layoutY="49.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/HeartFull.png" />
                    </image>
                </ImageView>
                <ImageView fitHeight="39.0" fitWidth="41.0" layoutX="1014.0" layoutY="47.0" pickOnBounds="true" preserveRatio="true" />
                <ImageView fx:id="activeUserPicture" fitHeight="50.0" layoutX="1100.0" layoutY="43.0" pickOnBounds="true" preserveRatio="true"></ImageView>
                <Hyperlink fx:id="logout" layoutX="10.0" layoutY="56.0" onAction="#logoutEvent" text="Logout" />
                <Hyperlink fx:id="adminPanel" layoutX="90.0" layoutY="56.0" onAction="#goToUsersView" text="Admin panel" visible="false"/>
                <Hyperlink fx:id="recipes" layoutX="916.0" layoutY="57.0" text="Recipes" />
                <Hyperlink fx:id="favorites" layoutX="1034.0" layoutY="56.0" onAction="#seeFavourites" text="Favourites" />
                <Button fx:id="newRecipeBtn" layoutX="800.0" layoutY="56.0" mnemonicParsing="false" onAction="#openNewRecipe" text="New Recipe" />
                <Hyperlink fx:id="activeUser" layoutX="1147.0" layoutY="56.0" text="User" />

                <Pane fx:id="homeContentPane" layoutX="70.0" layoutY="317.0" prefHeight="380.0" prefWidth="1060.0" mouseTransparent="true">
                    <Label alignment="CENTER" contentDisplay="TOP" layoutY="133.0" prefHeight="39.0" prefWidth="1200.0" text="Favourite Recipe" textAlignment="CENTER">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                <GridPane fx:id="favouriteHome" hgap="80.0" layoutX="70.0" layoutY="217.0" prefHeight="380.0" prefWidth="1060.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="411.0" minWidth="10.0" prefWidth="296.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="522.0" minWidth="10.0" prefWidth="310.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="414.0" minWidth="10.0" prefWidth="294.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                </GridPane>
                    <Label alignment="CENTER" contentDisplay="CENTER" layoutY="743.0" prefHeight="17.0" prefWidth="1200.0" text="Our Recommendations">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    <Button fx:id="allRecipesBtn" layoutX="533.0" layoutY="1262.0" mnemonicParsing="false" onAction="#openAllRecipes" prefHeight="48.0" prefWidth="155.0" text="View all Recipes" />
                    <GridPane fx:id="recommendationsHome" focusTraversable="false" hgap="80.0" layoutX="70.0" layoutY="815.0" prefHeight="380.0" prefWidth="1060.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="411.0" minWidth="10.0" prefWidth="296.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="522.0" minWidth="10.0" prefWidth="310.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="414.0" minWidth="10.0" prefWidth="294.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                    </GridPane>
                </Pane>

                <Pane fx:id="searchPane" stylesheets="@HomeWindow.css" visible="false" mouseTransparent="true">
                    <children>
                        <Label alignment="CENTER" contentDisplay="TOP" layoutY="233.0" prefHeight="39.0"
                               prefWidth="1200.0" text="Search Results" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <GridPane fx:id="searchGrid" hgap="80.0" layoutX="86.0" layoutY="287.0" vgap="80.0"
                                  minHeight="50">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0"
                                                   prefWidth="300.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="400.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="400.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="400.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                        </GridPane>
                    </children>
                </Pane>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
