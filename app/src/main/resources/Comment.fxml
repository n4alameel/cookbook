<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>

<VBox fx:id="processingComment" spacing="10.0" stylesheets="@RecipeWindow.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CommentController">
    <FlowPane alignment="CENTER_LEFT" columnHalignment="RIGHT" hgap="10.0" prefHeight="39.0" prefWidth="522.0">
        <children>
         <Pane fx:id="commentatorAva" prefHeight="50.0" prefWidth="60.0" />
            <Text fx:id="commentatorName" strokeType="OUTSIDE" strokeWidth="0.0" text="Username" />
         <ButtonBar buttonMinWidth="0.0" buttonOrder="">
            <buttons>
                  <Button fx:id="editBtn" graphicTextGap="0.0" mnemonicParsing="false" onAction="#editCommentAction" styleClass="com-btn" text="edit" />
                  <Button fx:id="removeBtn" graphicTextGap="0.0" mnemonicParsing="false" onAction="#removeCommentAction" styleClass="com-btn" text="remove" />
            </buttons>
         </ButtonBar>
        </children>
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
    </FlowPane>
    <Text fx:id="commentText" strokeType="OUTSIDE" strokeWidth="0.0" text="Very nice recipe! Needed more salt though.">
      <VBox.margin>
         <Insets left="50.0" right="10.0" />
      </VBox.margin></Text>
    <Line endX="1120.0" startX="60.0" stroke="#bababa" />
   <padding>
      <Insets top="5.0" />
   </padding>
</VBox>
