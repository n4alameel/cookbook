<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="box" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CommentEditionController">
   <children>
        <TextArea fx:id="commentEditionTextArea" prefHeight="47.0" prefWidth="941.0" promptText="Previous comment text" styleClass="com-field">
            <VBox.margin>
                <Insets left="50.0" right="50.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" />
            </padding>
        </TextArea>
        <ButtonBar buttonMinWidth="0.0" buttonOrder="">
            <buttons>
                <Button mnemonicParsing="false" onAction="#saveChangings" styleClass="add-btn" text="Save Changings" />
                <Button mnemonicParsing="false" onAction="#cancelChangings" styleClass="add-btn" text="Cancel" />
            </buttons>
            <padding>
                <Insets left="50.0" right="50.0" />
            </padding>
        </ButtonBar>
   </children>
</VBox>
